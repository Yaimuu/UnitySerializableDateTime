:root {
    /* 🖌️ Background Colors */
    --calendar-background: rgba(0, 0, 0, 0);
    --calendar-header-background: #f0f0f0;
    --calendar-weekdays-background: #e8e8e8;
    --calendar-day-background: #d5d5d5;
    --calendar-day-hover-background: #ffffff;
    --calendar-today-background: #ffeed5;
    --calendar-selected-background: #2563EB;
    --calendar-nav-button-background: #d5d5d5;
    --calendar-nav-button-hover-background: #ffffff;

    /* 🎨 Text Colors */
    --calendar-header-text-color: #333333;
    --calendar-weekdays-text-color: #555555;
    --calendar-day-text-color: #222222;
    --calendar-disabled-day-text-color: #9e9e9e;
    --calendar-today-text-color: #ff7a00;
    --calendar-selected-day-text-color: #1a3d7c;

    /* 🖍️ Border Colors */
    --calendar-border-color: #cccccc;
    --calendar-today-border-color: #ff7a00;
    --calendar-selected-border-color: #3370ff;

    /* 🧱 Sizing and Layout */
    --calendar-border-radius: 4px;
    --calendar-padding: 8px;
    --calendar-day-size: 32px;
    --calendar-gap: 4px;

    /* 🆎 Font */
    --calendar-title-font-size: 20px;
    --calendar-font-size: 14px;
}
